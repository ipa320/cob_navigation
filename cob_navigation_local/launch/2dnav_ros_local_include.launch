<?xml version="1.0"?>
<launch>

	<!--- Run move base -->
	<node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
		<remap from="cmd_vel" to="base_controller/command"/>
		<remap from="odom" to="base_controller/odometry"/>
		<param name="controller_frequency" value="12"/>

		<!--- load common configuration files -->
		<rosparam file="$(find cob_navigation_config)/config/costmap_common_params.yaml" command="load" ns="global_costmap" />
		<rosparam file="$(find cob_navigation_config)/config/costmap_common_params.yaml" command="load" ns="local_costmap" />

		<!--- load local navigation specific parameters -->
		<rosparam file="$(find cob_navigation_local)/config/local_costmap_params.yaml" command="load" />
		<rosparam file="$(find cob_navigation_local)/config/global_costmap_params.yaml" command="load" />

		<!--- load planner parameters -->
		<rosparam file="$(find cob_navigation_config)/config/base_local_planner_params.yaml" command="load" />
	</node>

</launch>
